/* guide.wxss */
@import "../public/css/base.wxss";

.guide .nav{
  height: 365rpx;
  overflow: hidden;
}
.guide .nav image{
  width: 100%;
}
.guide swiper{
  height: 430rpx;
}
.guide .slide-image{
  width: 100%;
}
.box{
  width: 94%;
  margin: 0 3%;
}

.box .item{
  overflow: hidden;
  position: relative;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}
.box navigator{
  margin-top: 20rpx;
}

.box .item .icon{
  position: absolute;
  transform:rotate(-45deg);
  color:#fff;
  font-size: 22rpx;
  background: #ff8b87;
  width: 150rpx;
  top: 8rpx;
  left: -50rpx;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
}

.box .other-navigator-hover{
  background: #eee;
}

.box .item .img{
  width: 250rpx;
  height: 177rpx;
  float: left;
  margin-right: 20rpx;
}

.box .item .img image{
  max-width: 100%;
  max-height: 100%;
}
.box .item .info {
  width: 400rpx;
  float: left;
  color: #666;
}

.info text{
  display: block;
}
.info .title{
  color: #333;
  font-size: 34rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.info .desc{
  color: #999;
  height: 64rpx;
  font-size: 24rpx;
  margin-top: 15rpx;
}

.info .date{
  color: #999;
  font-size: 24rpx;
  margin-top: 15rpx;
}
